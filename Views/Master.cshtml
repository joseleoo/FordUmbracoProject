@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models.PublishedContent;
@{
	Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title> Ford Philippines: SUVs, Trucks and Sports Cars | Official Ford PH Website  </title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css" />
</head>

<body>

    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#"><img id="ford_logo" src="\images\ford_logo.webp" style="max-height: 1.7em;"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Vehicles</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Fleet</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Engineering</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About Ford</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Owner</a>
                        </li>
                        <li id="dropdown" class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <img src="images\account.png" style="max-height: 30px;" alt="user">
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Manage Reservation</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <main>
        <div class="carousel-container">
            <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item  active" data-bs-interval="2000">
                        <img src="\images\cars_slide\lastest_ofers.jpg" class="d-block w-100" alt="lastest_ofers">
                        <div class="carousel-caption d-none d-md-block ">
                            <h1>Ford Explorer</h1>
                            <div class="btn_caption">
                                <button type="button" class="btn btn-outline-light rounded-pill learn">
                                    Learn
                                    More
                                </button>
                                <button type="button" class="btn btn-outline-light rounded-pill">Reserve Now</button>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="2000">
                        <img src="\images\cars_slide\ford_Territory.jpg" class="d-block w-100"
                             alt="ford_Territory">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Next-Generation</h5>
                            <h1>Ford Territory</h1>
                            <div class="btn_caption">
                                <button type="button" class="btn btn-outline-light rounded-pill learn">
                                    Learn
                                    More
                                </button>
                                <button type="button" class="btn btn-outline-light rounded-pill">Reserve Now</button>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="2000">

                        <img src="/images/cars_slide/ford_everest.jpg" class="d-block w-100" alt="ford_everest" />
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Next-Generation</h5>
                            <h1>Ford Everest</h1>
                            <div class="btn_caption">
                                <button type="button" class="btn btn-outline-light rounded-pill learn">
                                    Learn
                                    More
                                </button>
                                <button type="button" class="btn btn-outline-light rounded-pill">Reserve Now</button>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="carousel-arrows">
                    <button class="arrows rounded-pill" type="button" data-bs-target="#carouselExampleAutoplaying"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="arrows rounded-pill" type="button" data-bs-target="#carouselExampleAutoplaying"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
        <!-- <div id="chatContainer" class="d-none">
            <div aria-live="polite" aria-atomic="true" class="bg-body-secondary position-relative bd-example-toasts rounded-3">
                <div class="toast-container p-3" id="toastPlacement">
                  <div class="toast">
                    <div class="toast-header">
                      <img src="..." class="rounded me-2" alt="...">
                      <strong class="me-auto">Bootstrap</strong>
                      <small>11 mins ago</small>
                    </div>
                    <div class="toast-body">
                      Hello, world! This is a toast message.
                    </div>
                  </div>
                </div>
              </div>
        </div> -->
        <!-- <div class="fixed-bottom p-3">
            <button id="chatButton" class="btn btn-primary">Open Chat</button>
        </div> -->
    </main>
    
    @RenderBody()

    <!-- Footer -->
    <div class="container-fluid footer">
        <div class="container">
            @Model.Value("footerText")

            <div class="text-center">
                @* <img src="/images/arm_with_u_logo.png" class="img-fluid" alt="Arm with Umbraco Logo"> *@
            </div>
        </div>

    </div>


    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
</body>
</html>